<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlatformTimePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/secondary_accent_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersBackgroundColor">@color/light_color</item>
        <item name="android:headerBackground">@color/primary_color</item>
        <item name="android:numbersTextColor">@color/accent_color</item>
        <item name="android:numbersInnerTextColor">@android:color/white</item>
        <item name="android:numbersSelectorColor">@color/secondary_accent_color</item>
        <item name="android:amPmTextColor">@color/light_color</item>
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>